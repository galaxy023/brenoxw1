document.addEventListener('keydown', async (event) => {
    const key = event.key; // Obter a tecla pressionada
    const response = await fetch('http://seu-servidor:3000/teclaPressionada', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ tecla: key }),
    });
    const data = await response.text();
    console.log(data); // Resposta do servidor
});
